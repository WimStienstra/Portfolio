<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/css/external/fullpage.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    @if (Url.RouteUrl(ViewContext.RouteData.Values).Contains("Admin"))
    {
        <header>
            <nav class="navbar navbar-expand-lg bg-glass position-fixed w-100 top-0">
                <div class="container-fluid mx-5">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <img src="../assets/icons/brand.png" width="30px" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarToggler">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Admin/Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Admin/About">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Admin/Experience">Experiences</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Admin/Skill">Skills</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Admin/Language">Languages</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-page="/Index"><i class="fas fa-arrow-left"></i> Back to site</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <main role="main" class="pb-3 mt-5">
            @RenderBody()
        </main>
    }
    else
    {
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    }

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - Portfolio - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/external/bootstrap.bundle.min.js"></script>
    <script src="~/js/external/fullpage.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
