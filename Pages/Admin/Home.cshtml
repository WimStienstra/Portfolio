@page
@model Portfolio.Pages.Admin.HomeModel
@{
    ViewData["Title"] = "Admin - Home";
}

<div id="admin-home-page">
    <div class="background-image"></div>

    <div class="row">
        <div class="card col-xs-12 col-lg-5 mx-auto mt-5 bg-glass text-white">
            <div class="icon mx-3">
                <i class="fas fa-address-card"></i>
            </div>
            <hr />
            <a class="mx-3" asp-page="/Admin/About">
                <h1>
                    About
                    <i class="fas fa-arrow-right float-end"></i>
                </h1>
            </a>
        </div>
        <div class="card col-xs-12 col-lg-5 mx-auto mt-5 bg-glass text-white">
            <div class="icon mx-3">
                <i class="fas fa-flask"></i>
            </div>
            <hr />
            <a class="mx-3" asp-page="/Admin/Experience">
                <h1>
                    Experiences
                    <i class="fas fa-arrow-right float-end"></i>
                </h1>
            </a>
        </div>
        <div class="card col-xs-12 col-lg-5 mx-auto mt-5 bg-glass text-white">
            <div class="icon mx-3">
                <i class="fas fa-palette"></i>
            </div>
            <hr />
            <a class="mx-3" asp-page="/Admin/Skill">
                <h1>
                    Skills
                    <i class="fas fa-arrow-right float-end"></i>
                </h1>
            </a>
        </div>
        <div class="card col-xs-12 col-lg-5 mx-auto mt-5 bg-glass text-white">
            <div class="icon mx-3">
                <i class="fas fa-language"></i>
            </div>
            <hr />
            <a class="mx-3" asp-page="/Admin/Language">
                <h1>
                    Languages
                    <i class="fas fa-arrow-right float-end"></i>
                </h1>
            </a>
        </div>
    </div>
</div>
